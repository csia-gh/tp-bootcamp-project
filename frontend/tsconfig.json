{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "contexts/UiContext.js", "pages/users/index.tsx", "pages/repositories/index.tsx", "components/PaginatedItems/PaginatedItems.tsx", "pages/repositories/[id]/index.tsx", "components/Search/Search.tsx", "components/Layout/Layout.tsx"],
  "exclude": ["node_modules"]
}
